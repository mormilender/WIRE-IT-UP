<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/play_info"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/bar"
        android:layout_marginBottom="30dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user"
            app:civ_border_color="@color/blue"
            app:civ_border_width="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_image"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:id="@+id/name_player"
            tools:text="@tools:sample/first_names"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_green"
            android:foregroundGravity="center"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:foreground="@drawable/ic_format_list_numbered_black_24dp"
            android:id="@+id/score" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_info"
        android:id="@+id/level_lay"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/lev_lay1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/level_back"
                    >
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/off1"
                    android:scaleType="centerCrop"
                    android:tag="1"
                   android:background="@color/no_color"
                    android:id="@+id/lev_1"
                    />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/off2"
                    android:scaleType="centerCrop"
                    android:tag="2"
                    android:background="@color/no_color"
                    android:id="@+id/lev_2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                >
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/off3"
                    android:tag="3"
                    android:scaleType="centerCrop"
                    android:background="@color/no_color"
                    android:id="@+id/lev_3"/>
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/lev_lay2"
                android:layout_marginTop="40dp"
                android:layout_below="@id/lev_lay1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/off4"
                        android:background="@color/no_color"
                        android:tag="4"
                        android:scaleType="centerCrop"
                        android:id="@+id/lev_4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/off5"
                        android:scaleType="centerCrop"
                        android:tag="5"
                        android:background="@color/no_color"
                        android:id="@+id/lev_5"
                        />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/off6"
                        android:scaleType="centerCrop"
                        android:tag="6"
                        android:background="@color/no_color"
                        android:id="@+id/lev_6"/>
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/lev_lay3"
                android:layout_marginTop="40dp"
                android:layout_below="@id/lev_lay2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/off7"
                        android:background="@color/no_color"
                        android:scaleType="centerCrop"
                        android:tag="7"
                        android:id="@+id/lev_7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/off8"
                        android:background="@color/no_color"
                        android:scaleType="centerCrop"
                        android:tag="8"
                        android:id="@+id/lev_8"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_back"
                >
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/off9"
                        android:scaleType="centerCrop"
                        android:tag="9"
                        android:background="@color/no_color"
                        android:id="@+id/lev_9"/>
            </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

